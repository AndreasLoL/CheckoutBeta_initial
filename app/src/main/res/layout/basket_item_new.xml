<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    style="@style/Base.Animation.AppCompat.Dialog">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/pic1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="REMOVE ALL"
        android:id="@+id/button"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:shadowColor="@android:color/holo_blue_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:text="+1"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:text="-1"
        android:id="@+id/button3"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="160dp"
        android:maxWidth="160dp"
        android:minWidth="160dp"
        android:layout_height="20dp"
        android:maxHeight="20dp"
        android:minHeight="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Yellow banana :)"
        android:singleLine="true"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="This is a product, in other words it&apos;s a banana but this is just a temporary filler text"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:textSize="10sp"
        android:singleLine="false"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="bar code: 43242342342"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:textSize="8sp"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="QTY: 3"
        android:textSize="9sp"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price: $11.00"
        android:textSize="9sp"
        android:id="@+id/textView7"
        android:layout_above="@+id/textView8"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total: $33.00"
        android:id="@+id/textView8"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/textView7" />

</RelativeLayout>